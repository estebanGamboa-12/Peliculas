<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/gray">

    <TextView
        android:id="@+id/descargas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descargar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="50sp"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-medium"
        />

    <TextView
        android:id="@+id/imagen1"
        android:layout_width="263dp"
        android:layout_height="92dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="52dp"
        android:background="@drawable/images"
        app:layout_constraintEnd_toEndOf="@id/descargas"
        app:layout_constraintTop_toBottomOf="@id/descargas" />

    <TextView
        android:id="@+id/titulo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/imagen1"
        app:layout_constraintTop_toTopOf="@id/imagen1"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:text="Jungle Cruise"
        android:textColor="@color/white"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/numero1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:text="12 -"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@id/imagen1"
        app:layout_constraintTop_toBottomOf="@id/titulo1" />
    <TextView
        android:id="@+id/memoria1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:text="1.03 GB -"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@id/numero1"
        app:layout_constraintTop_toBottomOf="@id/titulo1" />
    <TextView
        android:id="@+id/minutes1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:text="2 h 9 min"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@id/memoria1"
        app:layout_constraintTop_toBottomOf="@id/titulo1" />
    <TextView
        android:id="@+id/play1"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/play"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/minutes1"
        app:layout_constraintTop_toBottomOf="@id/titulo1" />

    <TextView
        android:id="@+id/imagen2"
        android:layout_width="263dp"
        android:layout_height="92dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="52dp"
        android:background="@drawable/images"
        app:layout_constraintEnd_toEndOf="@id/descargas"
        app:layout_constraintTop_toBottomOf="@id/imagen1" />
    <TextView
        android:id="@+id/titulo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/imagen2"
        app:layout_constraintTop_toTopOf="@id/imagen2"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:text="Black Widow"
        android:textColor="@color/white"
        android:textSize="20dp"
        />

    <TextView
